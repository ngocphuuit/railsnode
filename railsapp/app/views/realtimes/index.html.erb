<div class="container">
	<h3 style="text-align: center">Home Page</h3>
	<h6 style="text-align: center"> To comunicate with other, please fill your name and click "Go !!!" button, have fun !!!!!!!</h6>
	<% if flash[:message] %>
		<div class="row">
			<div class="col s6 offset-s3">
				<div class="card blue-grey darken-1">
					<div class="card-content white-text">
						<p><%= flash[:message] %></p>
					</div>
				</div>
			</div>
		</div>
	<% end %>
	<form action="/chatroom" method="POST">
		<div id="fillname" class="row">
			<div class="input-field col s10">
				<input id="yourname" name="yourname" type="text" class="validate">
				<label for="yourname">Your Name</label>
			</div>
			<div class="input-field col s2">
				<button class="btn waves-effect waves-light" type="submit" name="action" id="goChatroom">Go !!!
					<i class="mdi-content-send right"></i>
				</button>
			</div>
		</div>
	</form>
</div>